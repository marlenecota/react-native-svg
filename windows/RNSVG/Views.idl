  enum UnitType
  {
    Unknown,
    Number,
    Percentage,
    EMS,
    EXS,
    PX,
    CM,
    MM,
    PT,
    PC,
  };

  [default_interface]
  runtimeclass SVGLength {
    SVGLength();
    SVGLength(Single param);
    SVGLength(Single param, UnitType type);

    Single Value { get; };
    UnitType Unit { get; };
  };

  enum MeetOrSlice {
    Meet,
    Slice,
    None,
  };

  [default_interface]
  runtimeclass SvgView : Windows.UI.Xaml.Controls.Panel
